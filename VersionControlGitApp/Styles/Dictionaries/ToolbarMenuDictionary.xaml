                            <Setter Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>-->
    </Style>

    <Style TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{StaticResource GrayBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource GrayBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GrayBackgroundColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>