<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VersionControlGitApp.Styles.Dictionaries">

    <!-- Fonts resource paths -->
    <Style x:Key="LibreFranklin" TargetType="{x:Type Control}">
        <Setter Property="TextElement.FontFamily" Value="/Styles/Fonts/#Libre Franklin"/>
    </Style>

    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource LibreFranklin}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource LibreFranklin}"/>
    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource LibreFranklin}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource LibreFranklin}"/>
    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource LibreFranklin}"/>
    <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource LibreFranklin}"/>


</ResourceDictionary>