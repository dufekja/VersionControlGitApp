<Application x:Class="VersionControlGitApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VersionControlGitApp"
             StartupUri="Windows/TokenWindow.xaml">
    <Application.Resources>
        
        <!-- App Colors -->
        <ResourceDictionary>
            <SolidColorBrush x:Key="WhiteTextColor">#fff</SolidColorBrush>
            <SolidColorBrush x:Key="BlackColor">#000</SolidColorBrush>
            <SolidColorBrush x:Key="DarkBackgroundColor">#222</SolidColorBrush>
            <SolidColorBrush x:Key="GrayBackgroundColor">#3f3f4f</SolidColorBrush>
            <SolidColorBrush x:Key="AccentsColor">#05055f</SolidColorBrush>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
