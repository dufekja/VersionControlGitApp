<Application x:Class="VersionControlGitApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VersionControlGitApp"
             StartupUri="Windows/TokenWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Import styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ColorsDictionary.xaml"/>
                <ResourceDictionary Source="Styles/ToolbarMenuDictionary.xaml"/>
                <ResourceDictionary Source="Styles/ComboBoxDictionary.xaml"/>
                <ResourceDictionary Source="Styles/FontsDictionary.xaml"/>
                <ResourceDictionary Source="Styles/ButtonsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ScrollBar style -->
            <Style TargetType="ScrollBar">
                <Setter Property="Background" Value="{StaticResource DarkBackgroundColor}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentsColor}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AccentsColor}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
