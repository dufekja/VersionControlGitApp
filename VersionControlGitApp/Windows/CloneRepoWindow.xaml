<Window x:Class="VersionControlGitApp.CloneRepoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VersionControlGitApp"
        mc:Ignorable="d"
        Title="CloneRepoWindow" Height="250" Width="400" WindowStartupLocation="CenterScreen" Background="#222222">
    
    <StackPanel Margin="20" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="Insert repository url:" FontSize="18" Foreground="White"/>
            <ComboBox x:Name="ExternalRepoComboBox" SelectionChanged="ExternalRepoComboBox_SelectionChanged" 
                      FontSize="15" Margin="15 0 0 0" Width="150"/>
        </StackPanel>
        <TextBox x:Name="URL" FontSize="15" Margin="0 10 0 0" Background="Black" BorderBrush="#3f3f46" BorderThickness="2" Foreground="White"/>
        <Button Click="CloneRepository" Content="Clone" HorizontalAlignment="Center" 
                Padding="4" Margin="10" Width="90" FontSize="16"/>
    </StackPanel>
</Window>
