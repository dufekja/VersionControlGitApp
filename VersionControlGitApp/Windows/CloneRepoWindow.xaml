<Window x:Class="VersionControlGitApp.CloneRepoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VersionControlGitApp"
        mc:Ignorable="d"
        Title="CloneRepoWindow" WindowStyle="ToolWindow"
        MinHeight="200" MinWidth="400" Height="200" Width="400" 
        WindowStartupLocation="CenterOwner" Background="{StaticResource BlackColor}">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="Insert repository url:" FontSize="18" 
                   Foreground="{StaticResource WhiteTextColor}"/>
            
            <ComboBox x:Name="ExternalRepoComboBox" 
                      SelectionChanged="ExternalRepoComboBox_SelectionChanged" 
                      FontSize="15" Margin="8,0,0,0" Width="150"/>
        </StackPanel>
        <TextBox x:Name="URL" FontSize="15" Margin="0,8,0,0" Background="{StaticResource DarkBackgroundColor}" BorderThickness="0" Foreground="{StaticResource WhiteTextColor}"/>
        <Button Click="CloneRepository" Content="Clone" HorizontalAlignment="Center" Background="{StaticResource AccentsColor}" Foreground="{StaticResource WhiteTextColor}" BorderThickness="0"
                Padding="2" Margin="5" Width="90" FontSize="16"/>
    </StackPanel>
</Window>
