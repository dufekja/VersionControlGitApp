<Window x:Class="VersionControlGitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VersionControlGitApp"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Title="VersionControlGitApp" MinHeight="400" MinWidth="800" Closed="Window_Closed">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open"
                        Executed="AddLocalRepository"/>
        <CommandBinding Command="ApplicationCommands.Copy"
                        Executed="CloneRepository"/>
        <CommandBinding Command="ApplicationCommands.New"
                        Executed="NewRepository"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="ApplicationCommands.Open"
                    Gesture="Ctrl+Shift+A"/>
        <KeyBinding Command="ApplicationCommands.Copy"
                    Gesture="Ctrl+Shift+C"/>
        <KeyBinding Command="ApplicationCommands.New"
                    Gesture="Ctrl+Shift+N"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="70" Width="70*"/>
            <ColumnDefinition MinWidth="90" Width="90*"/>
            <ColumnDefinition MinWidth="85" Width="85*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" Height="15*"/>
            <RowDefinition MinHeight="70"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition MinHeight="110"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Margin="0,0,0.6,0">
            <Menu DockPanel.Dock="Left" Padding="5">
                <MenuItem Header="Git">
                    <MenuItem Header="Private Token" Padding="3"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="File" Padding="5">
                    <MenuItem InputGestureText="Ctrl+Shift+N" Click="NewRepository" Header="New Repository" Padding="3"/>
                    <MenuItem InputGestureText="Ctrl+Shift+A" Click="AddLocalRepository" Header="Add Local Repository" Padding="3"/>
                    <MenuItem InputGestureText="Ctrl+Shift+C" Click="CloneRepository" Header="Clone Repository" Padding="3"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Accounts" Padding="5">

                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Branch" Padding="5">
                    <MenuItem Header="New" Padding="3"/>
                    <MenuItem Header="Rename" Padding="3"/>
                    <MenuItem Header="Merge selected" Padding="3"/>
                    <MenuItem Header="Delete" Padding="3" Margin="0 3 0 0"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Repository" Padding="5">
                    <MenuItem Header="Fetch" Padding="3"/>
                    <MenuItem Header="Push" Padding="3"/>
                    <MenuItem Header="Pull" Padding="3"/>
                    <MenuItem Header="Remove" Padding="3"/>
                    <MenuItem Header="Delete" Padding="3" Margin="0 3 0 0"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Statistics" Padding="5">

                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Team" Padding="5">

                </MenuItem>
            </Menu>
        </DockPanel>

        <Border Background="#3f3f46" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="0"/>
        <Border Background="#3f3f4f" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="10" Grid.Row="1"/>
        <Border Background="#222222" Grid.Column="2" Grid.ColumnSpan="5" Grid.RowSpan="10" Grid.Row="1"/>

        <Border Background="#3f3f4f" 
                Grid.Column="0" Grid.Row="7" Grid.RowSpan="3" Grid.ColumnSpan="2"
                BorderThickness="3">
            
            <StackPanel>
                <Label Content="Summary" Foreground="White"/>
                <TextBox x:Name="CommitSummary" Foreground="Black" HorizontalAlignment="Stretch" Padding="3" Margin="5 5 5 5" 
                         VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
                
                <Label Content="Description" Foreground="White"/>
                <TextBox x:Name="CommitDescription" Foreground="Black" HorizontalAlignment="Stretch" Padding="10" Margin="5 5 5 5" 
                         VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
                
                <Button Click="CommitRepository" Content="Commit" HorizontalAlignment="Center" Margin="0 8" Padding="15 5 15 5" FontSize="10"/>
            </StackPanel>
        </Border>

        <Image x:Name="UserImage" Grid.Column="0" Grid.Row="1" Margin="0,0,0.4,25.273" Grid.RowSpan="2"/>

        <Label Foreground="White" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15.6,13,14.8,9.4">
            <Label.Content>
                <AccessText x:Name="UserName" FontSize="14" TextWrapping="Wrap" Text="Account name"/>
            </Label.Content>
        </Label>

        <StackPanel Background="Black" Grid.Row="1" Grid.Column="2" Grid.RowSpan="5" Margin="0.2,0,0.6,41.873">
            <Label Content="Files to Commit" Foreground="White" FontSize="10" HorizontalAlignment="Center"/>
            <ListBox SelectionChanged="FilesToCommit_SelectionChanged" x:Name="FilesToCommit" Background="Black" Foreground="White" FontSize="12" HorizontalAlignment="Stretch" MinHeight="150"/>
        </StackPanel>


        <TextBox x:Name="PathLabel" Foreground="White" Background="Black"
                 Grid.Column="3" Grid.Row="1" Margin="20.4,0,19.4,45.4" Grid.ColumnSpan="3"/>

        <TextBox x:Name="FileContent"
                 Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="7" Background="#222222" Foreground="White"/>

        <ComboBox x:Name="RepoComboBox" SelectionChanged="RepoComboBox_SelectionChanged" 
                  MinHeight="30" FontSize="16" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="1"></ComboBox>
    </Grid>
</Window>
