<Window x:Class="VersionControlGitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VersionControlGitApp"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Title="VersionControlGitApp" MinHeight="400" MinWidth="800">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open"
                        Executed="CloneRepository"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="ApplicationCommands.Open"
                    Gesture="Ctrl+C"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="70"/>
            <ColumnDefinition MinWidth="90"/>
            <ColumnDefinition MinWidth="85"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" Height="15*"/>
            <RowDefinition MinHeight="70"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition MinHeight="110"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0.4,0">
            <Menu DockPanel.Dock="Left" Padding="5">
                <MenuItem Header="Git">
                    <MenuItem Header="Private Token" Padding="3"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="File" Padding="5">
                    <MenuItem Header="New Repository" Padding="3"/>
                    <MenuItem Click="AddLocalRepository" Header="Add Local Repository" Padding="3"/>
                    <MenuItem Click="CloneRepository" Header="Clone Repository" Padding="3"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Accounts" Padding="5">

                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Branch" Padding="5">
                    <MenuItem Header="New" Padding="3"/>
                    <MenuItem Header="Rename" Padding="3"/>
                    <MenuItem Header="Merge selected" Padding="3"/>
                    <MenuItem Header="Delete" Padding="3" Margin="0 3 0 0"/>
                </MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="Repository" Padding="5">
                    <MenuItem Header="Fetch" Padding="3"/>
                    <MenuItem Header="Push" Padding="3"/>
                    <MenuItem Header="Pull" Padding="3"/>
                    <MenuItem Header="Remove" Padding="3" Margin="0 3 0 0"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Border Background="#3f3f46" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="3" Margin="84.4,0,-0.4,0"/>
        <Border Background="#3f3f4f" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,84.4,0" Grid.RowSpan="10" Grid.Row="1"/>
        <Border Background="#222222" Grid.Column="2" Grid.ColumnSpan="3" Margin="0.4,0,-0.4,0" Grid.RowSpan="10" Grid.Row="1"/>

        <Border Background="#3f3f4f" Grid.Column="4" Grid.Row="7" Grid.RowSpan="3" BorderThickness="3">
            <StackPanel>
                <Label Content="Summary" Foreground="White"/>
                <TextBox Foreground="Black" HorizontalAlignment="Stretch" Padding="3" Margin="5 5 5 5" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
                <Label Content="Description" Foreground="White"/>
                <TextBox Foreground="Black" HorizontalAlignment="Stretch" Padding="10" Margin="5 5 5 5" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
                <Button Content="Commit" HorizontalAlignment="Center" Margin="0 8" Padding="15 5 15 5" FontSize="14"/>
            </StackPanel>
        </Border>

        <Label Foreground="White" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label.Content>
                <AccessText FontSize="14" TextWrapping="Wrap" Text="Account name"/>
            </Label.Content>
        </Label>

        <ComboBox x:Name="RepoComboBox" MinHeight="30" FontSize="16" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"></ComboBox>
        
        <Button Content="Statistics" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" BorderThickness="3" FontSize="18"/>
        <Button Content="History" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" BorderThickness="3" FontSize="18"/>
        <Button Content="Changes" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" BorderThickness="3" FontSize="18"/>
        <Button Content="Projects" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" BorderThickness="3" FontSize="18"/>
        <Button Content="Team" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" BorderThickness="3" FontSize="18"/>
    </Grid>
    
</Window>
